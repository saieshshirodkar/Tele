<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/context_menu_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <LinearLayout
        android:id="@+id/context_menu_panel"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/context_menu_background"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/context_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/context_menu_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/context_menu_item_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="14dp"
            android:text="@string/context_play_now"
            android:textColor="@color/context_menu_item_text" />

        <TextView
            android:id="@+id/context_menu_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/context_menu_item_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="14dp"
            android:text="@string/context_details"
            android:textColor="@color/context_menu_item_text" />

        <TextView
            android:id="@+id/context_menu_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/context_menu_item_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="14dp"
            android:text="@string/context_delete"
            android:textColor="@color/context_menu_item_text" />
    </LinearLayout>
</FrameLayout>
